{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": ["every 2 weeks on monday"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automergeType": "branch",
      "requiredStatusChecks": [ "publish" ]
    }
  ]
}
